<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="sdg">
        <createTable tableName="SDG_PROFESSION_LEVEL">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SDG_PROFESSION_LEVEL"/>
            </column>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_BY" type="VARCHAR(255)"/>
            <column name="CREATED_DATE" type="timestamp with time zone"/>
            <column name="LAST_MODIFIED_BY" type="VARCHAR(255)"/>
            <column name="LAST_MODIFIED_DATE" type="timestamp with time zone"/>
            <column name="DELETED_BY" type="VARCHAR(255)"/>
            <column name="DELETED_DATE" type="timestamp with time zone"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="LEVEL_" type="SMALLINT"/>
            <column name="EMPLOYEE_PROFESSION_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="sdg">
        <createTable tableName="SDG_PROFESSION_LEVEL_EMPLOYEE_SKILL_LINK">
            <column name="EMPLOYEE_SKILL_ID" type="UUID">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_SDG_PROFESSION_LEVEL_EMPLOYEE_SKILL_LINK"/>
            </column>
            <column name="PROFESSION_LEVEL_ID" type="UUID">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_SDG_PROFESSION_LEVEL_EMPLOYEE_SKILL_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="sdg">
        <createIndex indexName="IDX_SDG_PROFESSION_LEVEL_EMPLOYEE_PROFESSION" tableName="SDG_PROFESSION_LEVEL">
            <column name="EMPLOYEE_PROFESSION_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="EMPLOYEE_PROFESSION_ID" baseTableName="SDG_PROFESSION_LEVEL"
                                 constraintName="FK_SDG_PROFESSION_LEVEL_ON_EMPLOYEE_PROFESSION"
                                 referencedColumnNames="ID" referencedTableName="SDG_EMPLOYEE_PROFESSION"/>
    </changeSet>
    <changeSet id="4" author="sdg">
        <addForeignKeyConstraint baseColumnNames="EMPLOYEE_SKILL_ID"
                                 baseTableName="SDG_PROFESSION_LEVEL_EMPLOYEE_SKILL_LINK"
                                 constraintName="FK_SDGPROLEVEMPSKI_ON_EMPLOYEE_SKILL" referencedColumnNames="ID"
                                 referencedTableName="SDG_EMPLOYEE_SKILL"/>
    </changeSet>
    <changeSet id="5" author="sdg">
        <addForeignKeyConstraint baseColumnNames="PROFESSION_LEVEL_ID"
                                 baseTableName="SDG_PROFESSION_LEVEL_EMPLOYEE_SKILL_LINK"
                                 constraintName="FK_SDGPROLEVEMPSKI_ON_PROFESSION_LEVEL" referencedColumnNames="ID"
                                 referencedTableName="SDG_PROFESSION_LEVEL"/>
    </changeSet>
</databaseChangeLog>