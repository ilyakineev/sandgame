<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://departmentListView.title"
      focusComponent="departmentsDataGrid">
    <data>
        <collection id="departmentsDc"
                    class="ru.sandmangroup.sandgame.entity.Department">
            <fetchPlan extends="_base">
                <property name="parentDepartment" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="departmentsDl" readOnly="true"/>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="departmentsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="departmentsDataGrid.createAction"/>
            <button id="editButton" action="departmentsDataGrid.editAction"/>
            <button id="removeButton" action="departmentsDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="departmentsDl"/>
        </hbox>
        <treeDataGrid id="departmentsDataGrid"
                      width="100%"
                      minHeight="20em"
                      dataContainer="departmentsDc"
                      hierarchyProperty="parentDepartment"
                      columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="parentDepartment"/>
                <column property="description"/>
            </columns>
        </treeDataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
