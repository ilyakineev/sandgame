<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="sdg">
        <createTable tableName="SDG_EMPLOYEE_EMPLOYEE_PROFESSION_LINK">
            <column name="EMPLOYEE_ID" type="UUID">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_SDG_EMPLOYEE_EMPLOYEE_PROFESSION_LINK"/>
            </column>
            <column name="EMPLOYEE_PROFESSION_ID" type="UUID">
                <constraints nullable="false" primaryKey="true"
                             primaryKeyName="PK_SDG_EMPLOYEE_EMPLOYEE_PROFESSION_LINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="sdg">
        <addForeignKeyConstraint baseColumnNames="EMPLOYEE_ID" baseTableName="SDG_EMPLOYEE_EMPLOYEE_PROFESSION_LINK"
                                 constraintName="FK_SDGEMPEMPPRO_ON_EMPLOYEE" referencedColumnNames="ID"
                                 referencedTableName="SDG_EMPLOYEE"/>
    </changeSet>
    <changeSet id="3" author="sdg">
        <addForeignKeyConstraint baseColumnNames="EMPLOYEE_PROFESSION_ID"
                                 baseTableName="SDG_EMPLOYEE_EMPLOYEE_PROFESSION_LINK"
                                 constraintName="FK_SDGEMPEMPPRO_ON_EMPLOYEE_PROFESSION" referencedColumnNames="ID"
                                 referencedTableName="SDG_EMPLOYEE_PROFESSION"/>
    </changeSet>
</databaseChangeLog>